  <script>
function toggleDescription(cardItem) {
    const description = cardItem.querySelector('.card-description');
    description.classList.toggle('show');
}

function addComment(id, btn) {
    event.stopPropagation();

    const section = btn.closest('.comments-section');
    const nameInput = section.querySelector('.comment-name');
    const textInput = section.querySelector('.comment-text');

    if (!nameInput.value || !textInput.value) {
        alert("LÃ¼tfen ad ve yorum giriniz.");
        return;
    }

    const comments = JSON.parse(localStorage.getItem(id)) || [];
    comments.push({
        name: nameInput.value,
        text: textInput.value
    });

    localStorage.setItem(id, JSON.stringify(comments));

    nameInput.value = '';
    textInput.value = '';

    loadComments(id);
}

function deleteComment(id, index) {
    const comments = JSON.parse(localStorage.getItem(id)) || [];
    comments.splice(index, 1);
    localStorage.setItem(id, JSON.stringify(comments));
    loadComments(id);
}

function loadComments(id) {
    const section = document.querySelector(`.comments-section[data-id="${id}"]`);
    const list = section.querySelector('.comment-list');
    list.innerHTML = '';

    const comments = JSON.parse(localStorage.getItem(id)) || [];

    comments.forEach((c, index) => {
        const div = document.createElement('div');
        div.className = 'comment-item';
        div.innerHTML = `
            <span>${c.name}:</span> ${c.text}
            <button class="delete-btn" onclick="deleteComment('${id}', ${index})">Sil</button>
        `;
        list.appendChild(div);
    });
}

document.addEventListener("DOMContentLoaded", () => {
    document.querySelectorAll('.card-visible').forEach(card => {
        const id = card.id;
        const desc = card.parentElement.querySelector('.card-description');

        const commentHTML = `
<div class="comments-section" data-id="${id}" onclick="event.stopPropagation()">
    <h4>ğŸ’¬ Yorumlar</h4>
    <div class="comment-list"></div>
    <input class="comment-name" placeholder="AdÄ±nÄ±z" onclick="event.stopPropagation()">
    <textarea class="comment-text" placeholder="Yorumunuz" onclick="event.stopPropagation()"></textarea>
    <button onclick="event.stopPropagation(); addComment('${id}', this)">Yorum Ekle</button>
</div>`;


        desc.insertAdjacentHTML('beforeend', commentHTML);
        loadComments(id);
    });
});
// === AUTH SYSTEM ===
function login() {
    const username = document.getElementById('login-username').value;
    const password = document.getElementById('login-password').value;

    if (!username || !password) {
        alert("KullanÄ±cÄ± adÄ± ve ÅŸifre giriniz");
        return;
    }

    localStorage.setItem("user", JSON.stringify({ username, password }));
    document.getElementById("login-overlay").style.display = "none";
    document.getElementById("userInfo").innerText = "ğŸ‘¤ " + username + " (Ã‡Ä±kÄ±ÅŸ)";
}

function logout() {
    localStorage.removeItem("user");
    location.reload();
}

function checkLogin() {
    const user = JSON.parse(localStorage.getItem("user"));
    if (user) {
        document.getElementById("login-overlay").style.display = "none";
        document.getElementById("userInfo").innerText = "ğŸ‘¤ " + user.username + " (Ã‡Ä±kÄ±ÅŸ)";
        document.getElementById("loginBtn").style.display = "none";
    } else {
        document.getElementById("loginBtn").style.display = "inline";
    }
}


// Yorumlarda isim otomatik gelsin
const originalAddComment = addComment;
addComment = function(id, btn) {
    const user = JSON.parse(localStorage.getItem("user"));
    if (!user) {
        alert("Yorum yapmak iÃ§in giriÅŸ yapmalÄ±sÄ±nÄ±z");
        return;
    }

    const section = btn.closest('.comments-section');
    section.querySelector('.comment-name').value = user.username;
    originalAddComment(id, btn);
};

checkLogin();
function openLogin() {
    document.getElementById("login-overlay").style.display = "flex";
}


</script>


